*{
	margin: 0;
	padding: 0;
	-webkit-tap-highlight-color: rgba(255,255,255,0);
	-webkit-tap-highlight-color:transparent;
}
html,body{
	width: 100%;
	height: 100%;
	font-size: 0.14rem;
	font-weight: 400;
	font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif"; 
	color: #777;
}
ul,li,ol{
	list-style: none;
}
body{
	display: flex;
	flex-direction: column;
}
::-webkit-input-placeholder { /* WebKit browsers */  
    color:    #999;  
}  
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */  
   color:    #999;  
   opacity:  1;  
}  
::-moz-placeholder { /* Mozilla Firefox 19+ */  
   color:    #999;  
   opacity:  1;  
}  
:-ms-input-placeholder { /* Internet Explorer 10+ */  
   color:    #999;  
}

textarea{
	resize:none;
	font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif";
}
img{
	border:none;
}

/*清除边框样式*/
/*input,select,textarea{outline:none;border:none;border-radius:0;background:none;appearance:none;-moz-appearance:none;-webkit-appearance:none;}*/
input[type="submit"],
input[type="reset"],
input[type="button"],
input[type="radio"],
input[type="checkbox"],
button {
 -webkit-appearance: none;
 appearance: none;
 outline:none;
 background: none;
 border: none;
 }

